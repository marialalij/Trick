{% extends 'base.html.twig' %}

{% block title %}SnowTricks - Home
{% endblock %}
{% block body %}
	<!-- Start Home Image -->
	<div class="w-100 h-100">
		<div class="home-bg">
			<div class="container">
				<span class="slogan">
					<p class="slogan-p">Born to snowboard</p>
				</span>
			</div>
			<a href="#tricks">
				<i class="fas fa-chevron-down fa-4x chevron-down"></i>
			</a>
		</div>
	</div>
	<!-- End Home Image -->

	<!-- Start Tricks -->
	{% if (app.user) %}
		<a class="nav-link" href="" style="text-align: center;">ADD TRICK</a>
	{% endif %}
	<span class="tricks-anchor" id="tricks"></span>
	<div class="container p-5">
		{% for message in app.flashes('success') %}
			<div class="alert alert-success">
				{{ message }}
			</div>
		{% endfor %}
		<div class="row">
			{% for trick in tricks %}
				<div class="col-lg-4 mb-4 trick">
					<div class="card">
						<a href="{{path('trick.show',{'id':trick.id}) }}"><img class="card-img-top home" src="/images/{{ trick.mainImage }}" alt="Trick"></a>
						<div class="card-body test">
							<a class="btn btn-outline-info btn-sm trick-link" target="_blank">{{ trick.name }}</a>
							{% if (app.user) %}
								<a class="float-right change-link ml-3 mr-3 pt-2" target="_blank">
									<i class="fas fa-pen fa-2x"></i>
								</a>
								<a data-toggle="modal" data-target="#exampleModal" class="float-right change-link ml-2 pt-2">
									<i class="fas fa-trash-alt fa-2x text-info"></i>
								</a>
								<!-- Modal -->
								<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
									<div class="modal-dialog" role="document">
										<div class="modal-content">
											<div class="modal-header">
												<h5 class="modal-title" id="exampleModalLabel">Attention !</h5>
												<button type="button" class="close" data-dismiss="modal" aria-label="Close">
													<span aria-hidden="true">&times;</span>
												</button>
											</div>
											<div class="modal-body">
												<p>
													Voulez-vous vraiment supprimer le trick
												</p>
											</div>
											<div class="modal-footer">
												<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
												<a href="">Supprimer</a>
											</div>
										</div>
									</div>
								</div>
							{% endif %}
						</div>
					</div>
				</div>
			{% endfor %}
			<div class="container">
				<div class="row justify-content-center m-3">
					<a href="#" id="loadMoreTrick">
						<i class="fas fa-plus-circle fa-3x"></i>
					</a>
					<a href="#" id="loadLessTrick">
						<i class="fas fa-minus-circle fa-3x"></i>
					</a>
				</div>
			</div>
		</div>
	</div>
	<div class="container-fluid cup">
		<a href="#tricks">
			<i class="fas fa-chevron-up fa-4x chevron-up"></i>
		</a>
	</div>
	<!-- End Tricks -->


{% endblock %}
