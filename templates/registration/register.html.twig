{% extends 'base.html.twig' %}

{% block title %}Snowtricks - S'inscrire
{% endblock %}

{% block body %}
	<div
		class="container registration">
		<!-- Registration Form -->
		<div class="row justify-content-center">
			<div class="col-md-6">
				<h1 class="mb-5 text-center">Inscrivez-vous</h1>
				{% for message in app.flashes('success') %}
					<div class="alert alert-success">
						{{ message }}
					</div>
				{% endfor %}
				{{ form_start(form) }}
				<div class="form-group">
					{{ form_row(form.email) }}
				</div>
				<div class="form-group">
					{{ form_row(form.userName) }}
				</div>
				<div class="form-group">
					{{ form_row(form.password) }}
				</div>
				<button type="submit" class="btn btn-info mb-2">creer un compte</button>

				{{ form_end(form) }}
			</div>
		</div>
		<!-- End Registration Form -->

	</div>
{% endblock body %}
