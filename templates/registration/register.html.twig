{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	<div class="container login-div">
		<h1 class="h3 mb-4 font-weight-normal text-center my-md-5"></h1>
		<div class="col-md-6 mx-auto mb-5 login-form text-center">
			{% for message in app.flashes('success') %}
				<div class="alert alert-info w-100 mt-3">
					{{ message }}
				</div>
			{% endfor %}
			{{ form_start(form) }}
			{{ form_row(form) }}
			<button type="submit" class="btn btn-info mb-2">Create an account</button>

			{{ form_end(form) }}

			<a class="custom-link" href="" id="alreadyAccount">Already an account ?</a>

		</div>
	</div>
{% endblock %}
