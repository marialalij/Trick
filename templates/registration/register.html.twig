{% extends 'base.html.twig' %}
{% block title %}Register
{% endblock %}

{% block body %}
	<div class="container login-div">

		<div class="col-md-6 mx-auto mb-5 login-form text-center">
			{% for message in app.flashes('success') %}
				<div class="alert alert-info w-100 mt-3">
					{{ message }}
				</div>
			{% endfor %}

			{% if not app.user %}
				{{ form_start(form) }}
				<h1 class="h3 mb-3 font-weight-normal text-center my-md-5">S'inscrire
					<i class="fas fa-sign-in-alt"></i>
				</h1>
				{% for flashError in app.flashes('verify_email_error') %}
					<div class="alert alert-danger" role="alert">{{ flashError }}</div>
				{% endfor %}

				<div class="form-control">
					<label for="inputUsername">{{ form_row(form.email) }}</label>
					<label for="inputUsername">
						{{ form_row(form.userName) }}</label>
					<label for="inputUsername">
						{{ form_row(form.password) }}</label>
				</div>


				<button type="submit" class="btn btn-info mb-2">creer un compte</button>


				{{ form_end(form) }}

			{% endif %}


		</div>
	</div>
{% endblock %}
