{% extends 'dashbord.html.twig' %}

{% block meta %}
	<meta name="description" content="Add new trick on Snowtricks, snowboarder community to learn snowboard tricks.">
{% endblock %}

{% block title %}Add new trick
{% endblock %}


{% block body %}
	<div class="container-fluid py-5 trick-bg">
		{{ form_start(form) }}
		<div class="container px-0 pb-5" id="editPage">
			<div class="row d-flex flex-column justify-content-center align-items-center" id="trickMainImg" style="background: url('/media/images/home.jpg');">
				<div class="py-2 px-3 mr-auto return-btn">
					<a href="{{ path('home') }}" class="btn btn-info">
						<i class="fas fa-undo-alt mr-2"></i>Back
					</a>
				</div>
				<div class="text-center">
					<h1 class="mb-5">New Trick</h1>
					{{ form_row(form.mainImage) }}
				</div>
			</div>
			<div class="row d-flex justify-content-center pt-3" id="newMedia">
				<div class="col pt-2 pb-5 d-flex flex-column" id="newTrickImages">
					<div class="load-media d-none d-lg-block">
						<div class="form-row">
							<div class="form-group col-md-12 text-center">

								<p class="collection-head first">Cliquez pour ajouter une image</p>
								{{ form_widget(form.images) }}
								<input type="hidden" id="image-counter" value="0">
								<hr>
							</div>
						</div>
						<div class="form-row">
							<div class="form-group col-md-12 text-center">
								<p class="collection-head">Cliquez pour ajouter une vid√©o (<u>Youtube uniquement</u>)</p>
								{{ form_widget(form.video) }}
								<input type="hidden" id="video-counter" value="0">

							</div>
						</div>
					</div>
				</div>
			</div>


			<div class="row py-3 d-flex flex-column align-items-center pb-0" id="newTrickInfos">
				<div class="form-group w-75 mr-auto">
					{{ form_errors(form.name) }}
					{{ form_widget(form.name, {'attr': {'placeholder': 'Trick name *'}}) }}
				</div>
				<div class="form-group w-100">
					{{ form_errors(form.description) }}
					{{ form_widget(form.description, {'attr': {'placeholder': 'Trick description *'}}) }}
				</div>
				<div class="form-group w-25 mr-auto">
					{{ form_widget(form.category) }}
				</div>
				<button type="submit" class="btn btn-info ml-auto">Save</button>

			</div>

		</div>

		{{ form_end(form) }}
	</div>
</div>{% endblock %}
