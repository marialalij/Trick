{% extends 'dashbord.html.twig' %}

{% block title %}My tricks
{% endblock %}

{% block subtitle %}
	Your tricks
{% endblock %}

{% block body %}
	<div class="px-5 py-4 dashboard-div" id="userTricks">
		{% for message in app.flashes('success') %}
			<div class="alert alert-info w-100 mt-3 text-center">
				{{ message }}
			</div>
		{% endfor %}

		{% for trick in tricks %}
			<div class="card mb-3">
				<div class="row no-gutters">
					<div class="col-md-4">
						<a href=" "></a>
					</div>
					<div class="col-md-8">
						<div class="card-body">
							<div class="d-flex justify-content-between align-items-center">
								<h5 class="card-title">
									<a href="{{ path('trick.show', {id: trick.id }) }}">{{ trick.name }}<a/></h5>
									<div class="card-actions trick-actions px-2 py-1">
										<a href="{{ path('trick_edit', {id: trick.id}) }}">
											<i class="fas fa-pencil-alt"></i>
										</a>

										<a href="{{ path('trick_delete',{"id":trick.id}) }}">
											<i class="fas fa-trash-alt"></i>
										</a>
									</div>
								</div>
								<p class="card-text trick-description">{{ trick.description|slice(0,100) }}...</p>
								<p class="card-text">
									<small class="text-muted">Created at:
										{{ trick.createdat|format_datetime() }}
										{% if trick.createdat != trick.updatedat %}
											<br>
											Last update:
											{{ trick.updatedat|format_datetime() }}
										{% endif %}

									</small>
								</p>

							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	{% endblock %}
