<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

		<title>
			{% block title %}Dashboard
			{% endblock %}
		</title>

		{% block stylesheets %}

			<!-- Bootstrap CSS -->
			<link
			rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">

			<!-- Custom CSS -->


			<link
			rel="stylesheet" href="{{ asset('css/dashbord.css') }}">


			<!-- Fonts -->
			<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
			<link
			href="https://fonts.googleapis.com/css2?family=MuseoModerno:wght@531&display=swap" rel="stylesheet">
			<!-- Favicon -->
			<link rel="icon" type="image/svg" href="/images/logo.svg"/>


		{% endblock %}
	</head>

	<body data-spy="scroll" data-target="#dashboard-nav">
		<div class="container-fluid px-0" class="d-flex" id="dashboard">
			<div class="row d-flex justify-content-between align-items-center" id="dashboard-top">
				<div class="px-4 d-flex justify-content-center">
					<h6 class="ml-auto my-auto"> {% block subtitle %}{% endblock %}
						</h6>
					</div>
				</div>
				<div class="row" id="dashboard-content">
					<nav class="col-sm-3 px-0 py-3 text-center" id="dashboard-nav">
						<ul class="nav d-flex flex-sm-column text-left">
							<li class="nav-item {% if nav is defined and nav == 'dashboard' %}active{% endif %}">
								<a class="nav-link" id="dashNavDashboard" href="">Dashboard</a>
							</li>
							<li class="nav-item {% if nav is defined and nav == 'myTricks' %}active{% endif %}">
								<a class="nav-link" id="dashNavTricks" href="/user/tricks">
									<i class="fas fa-list mr-2"></i>My tricks</a>
							</li>
							<li class="nav-item">
								<a class="nav-link" id="dashNavAdd" href="{{ path('user.trick.new') }}">
									<i class="fas fa-plus-square mr-2"></i>Add trick</a>
							</li>
							<li class="nav-item {% if nav is defined and nav == 'profile' %}active{% endif %}">
								<a class="nav-link" id="dashNavProfile" href="{{ path('user.profile', {userName: app.user.userName }) }}">
									<i class="fas fa-user mr-2"></i>Profile</a>
							</li>
							<li class="nav-item {% if nav is defined and nav == 'myComments' %}active{% endif %}">
								<a class="nav-link" id="dashNavComments" href="{{ path('user.comments') }}">
									<i class="fas fa-comment-dots mr-2"></i>My comments</a>
							</li>

							<li class="nav-item">
								<a class="nav-link" id="dashNavLogout" href="">
									<i class="fas fa-power-off mr-2"></i>Log out</a>
							</li>
						</body>
					</body>
				</body>
			</html>
		</body>
	</html>
</ul></nav><div class="col-sm-9 px-0"> {% block body %}{% endblock %}

