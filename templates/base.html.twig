<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<meta name="keywords" content="Snowtricks, snowboard, tricks, community ">

		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>

		{% block stylesheets %}
			<link
			rel="stylesheet" type="text/css" href="/css/styles.css">
			<!-- CSS only -->
			<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
			<!-- Custom CSS -->

			<!-- Fonts -->
			<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous"> <link href="https://fonts.googleapis.com/css2?family=MuseoModerno:wght@531&display=swap" rel="stylesheet">
			<link
			href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">


			<!-- Favicon -->
			<link rel="icon" type="image/svg" href="/images/logo.svg"/>

		{% endblock %}
	</head>

	<body data-spy="scroll" data-target="#mainNav">

		<nav class="navbar navbar-expand-sm navbar-light bg-dark sticky-top" id="mainNav">
			<a class="navbar-brand" href="/">
				<i class="fas fa-snowflake"></i>
				SnowTrick</a>
			<div class="ml-auto" id="mainNavBar">
				<div class="navbar-nav ml-auto">
					<a class="nav-item nav-link" href="/" id="navHome">Home
						<span class="sr-only">(current)</span>
					</a>
					<a class="nav-item nav-link nav-separator" href="/#trickList" id="navTricks">Tricks</a>
					{% if not app.user %}
						<a class="nav-item nav-link nav-separator" href="{{ path('app_login') }}" id="navLogin">Sign in</a>
						<a class="nav-item nav-link nav-separator" href="{{ path('register') }}" id="navSignup">Sign up</a>
					{% else %}
						<li class="nav-item dropdown" id="profileDropdown">
							<a class="nav-link dropdown-toggle nav-separator" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								{{ app.user.username}}
							</a>
							<div class="dropdown-menu" aria-labelledby="navbarDropdown">
								<a class="dropdown-item" href="{{ path('user.profile', {userName: app.user.userName }) }}">Profile</a>
								<a class="dropdown-item" href="{{ path('user.tricks') }}">My tricks</a>
								<a class="dropdown-item" href="{{ path('user.trick.new') }}">Add trick</a>
								<a class="dropdown-item" href="{{ path('user.comments') }}">My comments</a>
								<div class="dropdown-divider"></div>

								{% if is_granted('ROLE_ADMIN') %}
									<a class="dropdown-item" href="" id="navUsers">Users</a>
								{% endif %}
							</div>
						</li>
						<a class="nav-item nav-link nav-separator" href="{{ path('app_logout') }}" id="navLogout">Log out</a>
					{% endif %}

				</div>
			</div>
		</nav>

		{% block body %}{% endblock %}


		<footer class="row mx-0 py-3 text-left">
			<p class="mb-0 ml-4">Copyright maria lalij
				<i class="far fa-copyright"></i>2021 |
			</p>
		</footer>

		{% block javascripts %}
			<!-- JavaScript Bundle with Popper -->
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
			<script src="/js/main.js"></script>
			<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
			<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
			<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>

		{% endblock %}
	</body>
</html>
